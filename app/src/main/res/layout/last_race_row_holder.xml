<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="225px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_marginTop="10px"
                android:layout_marginLeft="310px"
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/black"/>
            <View
                android:layout_marginTop="150px"
                android:layout_marginLeft="310px"
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/position"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:layout_width="120px"
                android:layout_height="120px"
                android:fontFamily="@font/kumbh_sans_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="50px"/>

            <ImageView
                android:id="@+id/teamIcon"
                android:layout_width="90px"
                android:layout_height="80px"
                android:layout_marginLeft="180px"
                android:layout_marginTop="10px"/>

            <ImageView
                android:id="@+id/pilotNumber"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="180px"
                android:layout_marginTop="110px"/>

            <TextView
                android:id="@+id/pilotName"
                android:layout_width="500px"
                android:layout_height="100px"
                android:layout_marginLeft="370px"
                android:layout_marginTop="50px"
                android:fontFamily="@font/kumbhsans_light"
                android:textSize="48px"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/points"
                android:layout_width="120px"
                android:layout_height="60px"
                android:textColor="#729A32"
                android:textSize="40px"
                android:gravity="center"
                android:fontFamily="@font/kumbhsans_light"
                android:layout_marginLeft="800px"
                android:layout_marginTop="70px"/>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>